# ============================================================================
# Hoodi Validator Deployment Configuration
# ============================================================================
# Copy this file to .env and update with your values
# DO NOT commit .env to git (it's protected by .gitignore)
#
# Command to create .env from template:
#   cp .env.example .env
#   nano .env
# ============================================================================

# ============================================================================
# CRITICAL CONFIGURATION (MUST UPDATE)
# ============================================================================

# Your Ethereum address where MEV rewards and tips will be sent
# ⚠️  DO NOT use exchange address - you will lose rewards!
# Example: 0x1234567890123456789012345678901234567890
FEE_RECIPIENT=0x0000000000000000000000000000000000000000

# Your validator wallet password (must match key generation password)
# ⚠️  Use strong password: 12+ chars, mixed types, no spaces
# Example: MySecurePassword123!@#
VALIDATOR_PASSWORD=your-secure-password-here

# ============================================================================
# GETH CONFIGURATION (Execution Layer)
# ============================================================================

# Geth cache size in MB (adjust based on available RAM)
# 4096 MB for 32GB RAM, 8192 MB for 64GB+ RAM
GETH_CACHE=4096

# Maximum number of peers to connect to
# 50 is good for testnet, 100+ for mainnet
GETH_MAX_PEERS=50

# Your public IP address (for NAT traversal)
# Leave as 0.0.0.0 if you don't know your IP
GETH_NAT_IP=0.0.0.0

# Transaction lookup limit (how far back to keep transaction history)
# 2350000 is standard for full nodes
GETH_TX_LOOKUP_LIMIT=2350000

# ============================================================================
# BEACON CONFIGURATION (Consensus Layer)
# ============================================================================

# Maximum number of beacon peers
# 80 is good for testnet, 100-150 for mainnet
BEACON_MAX_PEERS=80

# Checkpoint sync URL for fast beacon sync
# Hoodi: https://hoodi.beaconstate.ethstaker.cc
BEACON_CHECKPOINT_SYNC_URL=https://hoodi.beaconstate.ethstaker.cc

# ============================================================================
# MEV-BOOST CONFIGURATION
# ============================================================================

# MEV-Boost relay URLs (comma-separated for multiple relays)
# Hoodi relays: Titan, Bloxroute, Flashbots, Aestus, Ultra Sound
# Format: url1,url2,url3
MEV_RELAYS=https://0xaa58208899c6105603b74396734a6263cc7d947f444f396a90f7b7d3e65d102aec7e5e5291b27e08d02c50a050825c2f@hoodi.titanrelay.xyz,https://0x821f2a65afb70e7f2e820a925a9b4c80a159620582c1766b1b09729fec178b11ea22abb3a51f07b288be815a1a2ff516@bloxroute.hoodi.blxrbdn.com,https://0xafa4c6985aa049fb79dd37010438cfebeb0f2bd42b115b89dd678dab0670c1de38da0c4e9138c9290a398ecd9a0b3110@boost-relay-hoodi.flashbots.net,https://0x98f0ef62f00780cf8eb06701a7d22725b9437d4768bb19b363e882ae87129945ec206ec2dc16933f31d983f8225772b6@hoodi.aestus.live,https://0xb1559beef7b5ba3127485bbbb090362d9f497ba64e177ee2c8e7db74746306efad687f2cf8574e38d70067d40ef136dc@relay-hoodi.ultrasound.money

# ============================================================================
# VALIDATOR CONFIGURATION
# ============================================================================

# Validator graffiti (optional identifier for your validator)
# Max 32 characters, visible on chain
VALIDATOR_GRAFFITI=hoodi-validator

# Enable doppelgänger protection (prevents slashing if keys run twice)
# true or false
VALIDATOR_DOPPELGANGER_PROTECTION=true

# ============================================================================
# DOCKER CONFIGURATION
# ============================================================================

# Docker image versions
GETH_VERSION=v1.15.1
BEACON_VERSION=v5.3.0
VALIDATOR_VERSION=v5.3.0
MEV_BOOST_VERSION=v1.7

# ============================================================================
# RESOURCE LIMITS (Docker)
# ============================================================================

# Geth resource limits
GETH_CPU_LIMIT=4
GETH_MEMORY_LIMIT=8G
GETH_CPU_RESERVATION=2
GETH_MEMORY_RESERVATION=4G

# Beacon resource limits
BEACON_CPU_LIMIT=4
BEACON_MEMORY_LIMIT=16G
BEACON_CPU_RESERVATION=2
BEACON_MEMORY_RESERVATION=8G

# Validator resource limits
VALIDATOR_CPU_LIMIT=2
VALIDATOR_MEMORY_LIMIT=4G
VALIDATOR_CPU_RESERVATION=1
VALIDATOR_MEMORY_RESERVATION=2G

# MEV-Boost resource limits
MEV_CPU_LIMIT=1
MEV_MEMORY_LIMIT=2G
MEV_CPU_RESERVATION=0.5
MEV_MEMORY_RESERVATION=1G

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Docker logging driver (json-file or other drivers)
LOGGING_DRIVER=json-file

# Maximum log file size
LOGGING_MAX_SIZE=100m

# Maximum number of log files to keep
LOGGING_MAX_FILE=3

# ============================================================================
# NETWORK CONFIGURATION
# ============================================================================

# Bind addresses for RPC endpoints
# 127.0.0.1 = localhost only (secure)
# 0.0.0.0 = all interfaces (less secure, use firewall)
GETH_HTTP_ADDR=127.0.0.1
GETH_WS_ADDR=127.0.0.1
BEACON_RPC_ADDR=127.0.0.1
BEACON_REST_ADDR=127.0.0.1
VALIDATOR_METRICS_ADDR=127.0.0.1
GETH_METRICS_ADDR=127.0.0.1
BEACON_METRICS_ADDR=127.0.0.1

# ============================================================================
# PORTS
# ============================================================================

# Geth ports
GETH_HTTP_PORT=8545
GETH_WS_PORT=8546
GETH_P2P_TCP_PORT=30303
GETH_P2P_UDP_PORT=30303
GETH_METRICS_PORT=6060

# Beacon ports
BEACON_RPC_PORT=4000
BEACON_REST_PORT=5052
BEACON_P2P_TCP_PORT=13000
BEACON_P2P_UDP_PORT=12000
BEACON_METRICS_PORT=8008

# Validator ports
VALIDATOR_METRICS_PORT=8009

# MEV-Boost ports
MEV_BOOST_PORT=3500

# ============================================================================
# MONITORING & DEBUGGING
# ============================================================================

# Enable debug RPC endpoints (useful for debugging)
BEACON_DEBUG_RPC=true

# Log level for services
# Options: trace, debug, info, warn, error
LOG_LEVEL=info

# ============================================================================
# ADVANCED CONFIGURATION (Optional)
# ============================================================================

# Geth sync mode (snap or full)
# snap = faster but uses more bandwidth
# full = slower but uses less bandwidth
GETH_SYNC_MODE=snap

# Geth garbage collection mode
# full = continuous pruning (recommended)
# archive = keep all state (requires much more disk)
GETH_GC_MODE=full

# Geth state scheme
# path = efficient pruning (recommended)
# hash = legacy (not recommended)
GETH_STATE_SCHEME=path

# ============================================================================
# HOODI NETWORK PARAMETERS
# ============================================================================

# Network name
NETWORK_NAME=hoodi

# Chain ID
CHAIN_ID=560048

# Hoodi Faucet URL
HOODI_FAUCET=https://hoodi.ethpandaops.io

# Hoodi Launchpad URL
HOODI_LAUNCHPAD=https://cheap.hoodi.launchpad.ethstaker.cc

# Hoodi Explorer URL
HOODI_EXPLORER=https://hoodi.etherscan.io

# ============================================================================
# DEPLOYMENT SETTINGS
# ============================================================================

# Timezone for logs and monitoring
TIMEZONE=UTC

# Enable automatic backups (true/false)
AUTO_BACKUP=true

# Backup frequency (daily, weekly, monthly)
BACKUP_FREQUENCY=daily

# ============================================================================
# SECURITY SETTINGS
# ============================================================================

# Enable firewall rules (true/false)
# If true, only allow P2P ports
ENABLE_FIREWALL_RULES=false

# Allowed IPs for RPC access (comma-separated)
# Leave empty to allow only localhost
ALLOWED_RPC_IPS=127.0.0.1

# ============================================================================
# END OF CONFIGURATION
# ============================================================================
# 
# After updating this file:
# 1. Save as .env
# 2. Run: ./scripts/setup.sh
# 3. Run: docker compose up -d
#
# ============================================================================
